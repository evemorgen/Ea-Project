<configuration>
    <property name="DEV_HOME" value="." />
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss} %-5level %logger{0} {%class %method} - %msg%n</pattern>
        </encoder>
    </appender>
 
    <appender name="FILE-THREAD" class="ch.qos.logback.classic.sift.SiftingAppender">
      <discriminator>
            <key>logFileName</key>
            <defaultValue>ea</defaultValue>
      </discriminator>

      <sift>
            <appender name="FILE-${logFileName}"
                    class="ch.qos.logback.core.rolling.RollingFileAppender">
                    <file>${DEV_HOME}/${logFileName}.log</file>

                    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                            <Pattern>
                                    %d{yyyy-MM-dd HH:mm:ss} [%thread] %level %logger{35} - %msg%n
                            </Pattern>
                    </encoder>

            </appender>
      </sift>
    </appender>

    <logger name="ea" level="info"
            additivity="false">
            <appender-ref ref="FILE-THREAD" />
        </logger>
    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
